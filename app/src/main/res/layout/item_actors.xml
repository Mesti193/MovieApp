<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:id="@+id/clBestPopular">

    <ImageView
        android:id="@+id/ivActor"
        android:layout_width="130dp"
        android:layout_height="190dp"
        android:background="@color/colorRatingBar"
        android:foreground="@drawable/gradient_shape_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:letterSpacing="0.08"
        android:textStyle="bold"
        android:textColor="@color/textPrimary"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/ivActor"
        app:layout_constraintEnd_toEndOf="@+id/ivActor"
        app:layout_constraintBottom_toTopOf="@+id/tvJob"/>

    <TextView
        android:id="@+id/tvJob"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        android:letterSpacing="0.08"
        android:textStyle="bold"
        android:textColor="@color/textLight"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/ivActor"
        app:layout_constraintEnd_toEndOf="@+id/ivActor"
        app:layout_constraintBottom_toBottomOf="@+id/ivActor"/>

</androidx.constraintlayout.widget.ConstraintLayout>
