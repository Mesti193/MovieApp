<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/colorPrimaryDark">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clDashboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glStart"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glEnd"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="gone" />

        <ImageView
            android:id="@+id/ivMovieDetails"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:foreground="@drawable/gradient_shape_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvReleaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_item_yellow"
            android:padding="6dp"
            android:text="2019"
            android:textColor="@color/textPrimary"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvVoteCount"
            app:layout_constraintStart_toStartOf="@+id/glStart"
            app:layout_constraintTop_toTopOf="@+id/ratingBar" />

        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:max="10"
            style="?android:attr/ratingBarStyleSmall"
            android:theme="@style/AppThemeRatingBar"
            app:layout_constraintBottom_toTopOf="@+id/tvVoteCount"
            app:layout_constraintEnd_toStartOf="@+id/tvVoteAverage"
            app:layout_constraintTop_toTopOf="@+id/tvVoteAverage"
            app:layout_constraintVertical_chainStyle="packed"
            tools:rating="3.5" />

        <TextView
            android:id="@+id/tvVoteCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="6dp"
            android:textColor="@color/textLight"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tvVoteAverage"
            app:layout_constraintEnd_toStartOf="@+id/tvVoteAverage"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar"
            tools:text="522 VOTES" />

        <TextView
            android:id="@+id/tvVoteAverage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:textColor="@color/textPrimary"
            android:textSize="52sp"
            app:layout_constraintBottom_toBottomOf="@+id/ivMovieDetails"
            app:layout_constraintEnd_toEndOf="@+id/glEnd"
            tools:text="5.2" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/textPrimary"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="@+id/glEnd"
            app:layout_constraintStart_toStartOf="@+id/glStart"
            app:layout_constraintTop_toBottomOf="@+id/tvVoteAverage"
            tools:text="Fantastic Beasts and Where to Find Them" />

        <ImageView
            android:id="@+id/ivTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/glStart"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            app:srcCompat="@drawable/ic_time" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textColor="@color/textPrimary"
            app:layout_constraintBottom_toBottomOf="@+id/ivTime"
            app:layout_constraintStart_toEndOf="@+id/ivTime"
            app:layout_constraintTop_toTopOf="@+id/ivTime"
            tools:text="2h 13min" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewGenres"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toTopOf="@+id/ivTime"
            app:layout_constraintStart_toEndOf="@+id/tvTime"
            app:layout_constraintEnd_toStartOf="@+id/ivFavMovie"
            app:layout_constraintBottom_toBottomOf="@+id/ivTime"/>

        <ImageView
            android:id="@+id/ivFavMovie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/ivTime"
            app:layout_constraintEnd_toEndOf="@+id/glEnd"
            app:layout_constraintBottom_toBottomOf="@+id/ivTime"
            app:srcCompat="@drawable/ic_favorite_border_white" />

        <TextView
            android:id="@+id/tvStoryline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:gravity="start"
            android:text="@string/fragment_movie_datails.storyline"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/glEnd"
            app:layout_constraintStart_toStartOf="@+id/glStart"
            app:layout_constraintTop_toBottomOf="@+id/ivTime" />

        <TextView
            android:id="@+id/tvStorylineContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:letterSpacing="0.10"
            android:textColor="@color/textPrimary"
            app:layout_constraintEnd_toEndOf="@+id/glEnd"
            app:layout_constraintStart_toStartOf="@+id/glStart"
            app:layout_constraintTop_toBottomOf="@+id/tvStoryline"
            tools:text="Seventy years before Harry Potter reading a book by Newt Scamander, author experiencing extraordinary adventures in the mysterious, the New York Association of witches." />

        <TextView
            android:id="@+id/tvPlayTrailer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/border_item_yellow"
            android:drawableStart="@drawable/ic_play_circle_yellow"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            android:padding="6dp"
            android:text="@string/fragment_movie_datails.trailer"
            android:textColor="@color/textPrimary"
            app:layout_constraintStart_toStartOf="@+id/glStart"
            app:layout_constraintTop_toBottomOf="@+id/tvStorylineContent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/viewActors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@color/backgroundLight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPlayTrailer">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/glStart2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/glEnd2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />

            <TextView
                android:id="@+id/tvActors"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:gravity="start"
                android:text="@string/fragment_movie_datails.actors"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@+id/viewActors"
                app:layout_constraintStart_toStartOf="@+id/glStart2"
                app:layout_constraintEnd_toEndOf="@+id/glEnd2" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewActors"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="30dp"
                app:layout_constraintTop_toBottomOf="@+id/tvActors"
                app:layout_constraintEnd_toEndOf="@+id/glEnd2"
                app:layout_constraintStart_toStartOf="@+id/glStart2"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tvAbout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:gravity="start"
            android:text="@string/fragment_movie_datails.about"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/viewActors"
            app:layout_constraintEnd_toEndOf="@+id/glEnd"
            app:layout_constraintStart_toStartOf="@+id/glStart" />

        <TextView
            android:id="@+id/tvOriginalTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/fragment_movie_datails.original_title"
            android:textColor="@color/details_text"
            app:layout_constraintTop_toBottomOf="@+id/tvAbout"
            app:layout_constraintStart_toStartOf="@+id/glStart"/>

        <TextView
            android:id="@+id/tvOriginalTitleContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:letterSpacing="0.10"
            android:textColor="@color/textPrimary"
            app:layout_constraintTop_toTopOf="@+id/tvOriginalTitle"
            app:layout_constraintStart_toEndOf="@+id/tvOriginalTitle"
            app:layout_constraintEnd_toEndOf="@+id/glEnd"
            tools:text="Fantastic Beasts and Where to Find Them"/>

        <TextView
            android:id="@+id/tvType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/fragment_movie_datails.type"
            android:textColor="@color/details_text"
            app:layout_constraintTop_toBottomOf="@+id/tvOriginalTitleContent"
            app:layout_constraintStart_toStartOf="@+id/glStart"/>

        <TextView
            android:id="@+id/tvTypeContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:letterSpacing="0.10"
            android:textColor="@color/textPrimary"
            app:layout_constraintTop_toTopOf="@+id/tvType"
            app:layout_constraintStart_toStartOf="@+id/tvOriginalTitleContent"
            app:layout_constraintEnd_toEndOf="@+id/glEnd"
            tools:text="Family, Fantasy, Adventure"/>

        <TextView
            android:id="@+id/tvProduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/fragment_movie_datails.production"
            android:textColor="@color/details_text"
            app:layout_constraintTop_toBottomOf="@+id/tvTypeContent"
            app:layout_constraintStart_toStartOf="@+id/glStart"/>

        <TextView
            android:id="@+id/tvProductionContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:letterSpacing="0.10"
            android:textColor="@color/textPrimary"
            app:layout_constraintTop_toTopOf="@+id/tvProduction"
            app:layout_constraintStart_toStartOf="@+id/tvOriginalTitleContent"
            app:layout_constraintEnd_toEndOf="@+id/glEnd"
            tools:text="Warner Bros"/>

        <TextView
            android:id="@+id/tvPremiere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/fragment_movie_datails.premiere"
            android:textColor="@color/details_text"
            app:layout_constraintTop_toBottomOf="@+id/tvProductionContent"
            app:layout_constraintStart_toStartOf="@+id/glStart"/>

        <TextView
            android:id="@+id/tvPremiereContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:letterSpacing="0.10"
            android:textColor="@color/textPrimary"
            app:layout_constraintTop_toTopOf="@+id/tvPremiere"
            app:layout_constraintStart_toStartOf="@+id/tvOriginalTitleContent"
            app:layout_constraintEnd_toEndOf="@+id/glEnd"
            tools:text="8 November 2016 (World)"/>

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/fragment_movie_datails.description"
            android:textColor="@color/details_text"
            app:layout_constraintTop_toBottomOf="@+id/tvPremiereContent"
            app:layout_constraintStart_toStartOf="@+id/glStart"/>

        <TextView
            android:id="@+id/tvDescriptionContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:letterSpacing="0.10"
            android:textColor="@color/textPrimary"
            app:layout_constraintTop_toTopOf="@+id/tvDescription"
            app:layout_constraintStart_toStartOf="@+id/tvOriginalTitleContent"
            app:layout_constraintEnd_toEndOf="@+id/glEnd"
            tools:text="The film begins in 1926. Newt Scamander"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/viewCreators"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/backgroundLight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDescriptionContent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/glStart3"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/glEnd3"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />

            <TextView
                android:id="@+id/tvCreators"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:gravity="start"
                android:text="@string/fragment_movie_datails.creators"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@+id/viewCreators"
                app:layout_constraintStart_toStartOf="@+id/glStart3"
                app:layout_constraintEnd_toEndOf="@+id/glEnd3" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewCreators"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="30dp"
                app:layout_constraintTop_toBottomOf="@+id/tvCreators"
                app:layout_constraintEnd_toEndOf="@+id/glEnd3"
                app:layout_constraintStart_toStartOf="@+id/glStart3"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>